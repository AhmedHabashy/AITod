# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# File Storage Paths
UPLOAD_DIR=../storage/uploads
AUDIO_DIR=../storage/audio
TRANSCRIPT_DIR=../storage/transcripts
OUTPUT_DIR=../storage/output

# File Upload Limits
MAX_FILE_SIZE_MB=500
